<Window x:Class="Reservas_Final.View.Reservas.MainReservas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reservas_Final.View.Reservas"
        mc:Ignorable="d"
        Title="MainReservas" Height="600" Width="1000"
        WindowStyle="none"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        BorderThickness="0"
        Background="Transparent" Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5 0 0 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9D5CB6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5E2D79"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="20" Background="White" BorderThickness="5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0 ,1">
                    <GradientStop Color="Purple" Offset="1"></GradientStop>
                    <GradientStop Color="Violet" Offset="0.75"></GradientStop>
                    <GradientStop Color="Purple" Offset="0.0"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" >
                    <DockPanel Margin="15 0 20 0">
                        <Image Height="40" VerticalAlignment="Top" Margin="10,15,0,0" Source="/View/Reservas/Logo-Night-Days.png" />
                        <TextBlock Text="Night Days" FontSize="27" Margin="15,10,0,0" FontWeight="Bold"/>
                    </DockPanel>
                    <DockPanel Margin="0 8 0 0">
                        <Button x:Name="btnPrincipal" Content="Principal" Style="{StaticResource MenuButtonStyle}"/>
                        <Button x:Name="btnUsuarios" Content="Usuarios" Style="{StaticResource MenuButtonStyle}"/>
                        <Button x:Name="btnHabitaciones" Content="Habitaciones" Width="130" Style="{StaticResource MenuButtonStyle}"/>
                        <Button x:Name="btnReservas" Content="Reservas" Style="{StaticResource MenuButtonStyle}"/>
                    </DockPanel>
                    <StackPanel VerticalAlignment="Center" Margin="40,0">
                        <TextBlock Text="User Name" Foreground="#804090" FontSize="21" FontWeight="Bold"/>
                    </StackPanel>
                    <Image Stretch="None" Margin="10,0,0,0" Source="/View/Reservas/notification.png"/>
                </StackPanel>

                <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <Button x:Name="btnVolver" Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Background="Transparent" BorderBrush="Transparent" Click="btnVolver_Click" >
                        <Image Source="/View/Reservas/Close.png" />
                    </Button>
                </StackPanel>

                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Width="750" Height="500" CornerRadius="10" BorderBrush="Gray" BorderThickness="2" Background="#C8C8C8">
                    <StackPanel>
                        <Canvas Height="63" VerticalAlignment="Top">
                            <Label  Content="Reservas" Canvas.Left="20" FontSize="45" FontWeight="Bold" Foreground="#FF06080D"></Label>
                            <StackPanel Canvas.Left="270" Canvas.Top="30" Orientation="Horizontal">
                                <TextBox x:Name="fltUsuario" BorderBrush="Black" BorderThickness="2" Width="150" Height="30" Text="User ID" FontSize="18" Margin="0 0 10 0"></TextBox>
                                <TextBox x:Name="fltHabitacion" BorderBrush="Black" BorderThickness="2" Width="150" Height="30" Text="Hab ID" FontSize="18"></TextBox>
                            </StackPanel>
                            <StackPanel Canvas.Right="20" Canvas.Top="20" Orientation="Horizontal" VerticalAlignment="Center">
                                <Image x:Name="imgToggleButton" Source="/View/Reservas/imgDataGrid.png" Width="20" Margin="10,0"/>
                            </StackPanel>
                        </Canvas>

                        <DataGrid x:Name="DataGridReservas" HeadersVisibility="None" CanUserAddRows="False" Margin="0,20,0,0" Width="700" Height="350" VerticalAlignment="Top" HorizontalAlignment="Center" AutoGenerateColumns="False" GridLinesVisibility="None" Background="White" BorderBrush="Transparent" BorderThickness="0" ItemsSource="{Binding AllReservas}">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <!-- Fondo predeterminado -->

                                    <Setter Property="Background" Value="#FFF1F1F1" />
                                    <Setter Property="Margin" Value="10,8" />
                                    <Setter Property="Height" Value="70" />
                                    <Setter Property="FontWeight" Value="Medium" />



                                    <!-- Cambiar fondo al pasar el mouse -->
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding _id}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding _id}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFFDD7FF" />

                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFFDD7FF"/>
                                            <Setter Property="BorderBrush" Value="#CD6CE0" />
                                            <Setter Property="BorderThickness" Value="1" />
                                        </Trigger>
                                        <!-- Alternar colores de fila -->
                                        <Trigger Property="AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="White" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <!--<DataGridTextColumn Header="A nombre de:" Width="100" Binding="{Binding id_usu}" />
                                <DataGridTextColumn Header="Habitación Reservada:" Width="100" Binding="{Binding id_hab}" />
                                <DataGridTextColumn Header="Fecha de Entrada:" Width="100" Binding="{Binding fecha_check_in}" />
                                <DataGridTextColumn Header="Fecha de Salida:" Width="100" Binding="{Binding fecha_check_out}" />
                                <DataGridTextColumn Header="Estado de la Reserva:" Width="100" Binding="{Binding estado_reserva}" />-->

                                <!--<DataGridTemplateColumn Header="Acciones" Width="150">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Button Content="Editar" Width="50" Height="25" Margin="0,3" Background="#A4A4A4" Foreground="#8040BB" BorderBrush="White" Cursor="Hand" Click="btnEditar_Click"/>
                                                <Button Content="Eliminar" Width="50" Height="25" Margin="0,3" Background="#A4A4A4" Foreground="#CC60BB" BorderBrush="White" Cursor="Hand" Click="btnBorrar_Click"/>
                                                <Button Content="Info" Width="50" Height="25" Margin="0,3" Background="#A4A4A4" Foreground="#6C6C6C" BorderBrush="White" Cursor="Hand" Click="btnInfo_Click"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>-->
                                <DataGridTextColumn Header="A nombre de:" Width="100" Binding="{Binding id_usu}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontSize" Value="20"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Habitación Reservada:" Width="100" Binding="{Binding id_hab}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha de Entrada:" Width="100" Binding="{Binding fecha_check_in}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha de Salida:" Width="100" Binding="{Binding fecha_check_out}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Estado de la Reserva:" Width="100" Binding="{Binding estado_reserva}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Acción" Width="150" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Orientation="Vertical">
                                                    <Button x:Name="btnModificar" Content="Editar" Width="80" Height="25" Margin="0,3" Background="#CD6CE0" BorderBrush="White" Foreground="White" Cursor="Hand" Click="btnEditar_Click">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="10"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                    <Button x:Name="btnEliminar" Content="Eliminar" Width="80" Height="25" Margin="0,3" Background="#8C52FF" BorderBrush="White" Cursor="Hand" Foreground="White"  Click="btnBorrar_Click"  >
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="10"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Button x:Name="btnInformacion" Content="Info" Width="50" Height="50" Margin="3,6" Background="#C8C8C8" BorderBrush="White" Cursor="Hand" Foreground="White"  Click="btnInfo_Click"  >
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="15"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom">
                    <Button x:Name="btnBuscarReserva" Width="80" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Background="Transparent" BorderBrush="Transparent" Click="btnBuscadorReserva_Click" >
                        <Image Source="/View/Reservas/search.png" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>