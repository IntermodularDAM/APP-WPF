<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="ColorPrimario">#68EB9C</SolidColorBrush>


    <Style TargetType="GridViewColumnHeader" x:Key="ColumListView">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style x:Key="TextBlockGeneral" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>

    </Style>

    <Style x:Key="LabelGeneral" TargetType="Label">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>

    </Style>
    
    <Style x:Key="TextBoxGeneral" TargetType="TextBox">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Height" Value="40"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                        <!--El ScrollViewer con el nombre PART_ContentHost es una parte obligatoria en el ControlTemplate de un TextBox. Sin este, el texto no se muestra ni puede ser editado.-->
                        <!--WPF espera específicamente este nombre (PART_ContentHost) para conectar el área de entrada del TextBox con su contenido interno.-->
                        <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="PasswordBoxGeneral" TargetType="PasswordBox">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Height" Value="40"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonLogin" TargetType="Button">
            <Setter Property="Height" Value="100"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderBrush="Transparent" Background="#68EB9C" BorderThickness="1" CornerRadius="40"  Width="70" Height="70" >
                        <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" >
                            <Path Fill="White" Data="M 0 20 L 30 0 L 30 10 L 50 10 L 50 30 L 30 30 L 30 40 Z">
                                <Path.RenderTransform>
                                    <ScaleTransform ScaleX="-1" ScaleY="1" CenterX="26.5" />
                                </Path.RenderTransform>
                                
                            </Path>
                        </StackPanel>
                        <Border.Effect>
                            <DropShadowEffect   Color="#68EB9C" 
                                                BlurRadius="20" 
                                                ShadowDepth="10" 
                                                Direction="315" 
                                                Opacity="0.5"
                                              />
                        </Border.Effect>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonReserva" TargetType="Button">


        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderBrush="Transparent" Background="{StaticResource ColorPrimario}" BorderThickness="1" CornerRadius="5">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BarSide" TargetType="Button">
        <Setter Property="Width" Value="102"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Margin" Value="20,0,0,0"/>
        <Setter Property="FontSize" Value="21"/>
    </Style>

    <!--Este estilo está destinado a los controles de tipo TextBlock . (Textos de Error)-->
    <Style x:Key="ErrorText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Red"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Visibility" Value="Collapsed"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

</ResourceDictionary>