<Window x:Class="app.View.Reservas.MainReservas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app.View.Reservas"
        mc:Ignorable="d"
                Title="MainReservas" Height="600" Width="1000"
        WindowStyle="none"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        BorderThickness="0"
        Background="Transparent" Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="15 10 0 0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" BorderThickness="2 1 2 4" BorderBrush="Black">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#9D5CB6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#5E2D79"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="20" Background="White" BorderThickness="5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0 ,1">
                    <GradientStop Color="Purple" Offset="1"></GradientStop>
                    <GradientStop Color="Violet" Offset="0.75"></GradientStop>
                    <GradientStop Color="Purple" Offset="0.0"></GradientStop>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="9*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" >
                    <DockPanel>
                        <Image  Height="40" VerticalAlignment="Top" Margin="10,15,0,0" Source="/View/Usuarios/MainUsuarios/logo_night_days.png" Cursor="Hand" MouseDown="Image_MouseDown"  />
                        <Label Content="Hotel Night Day's" FontSize="27" Margin="5,10,20,0" FontWeight="Bold" MouseDown="TextBlock_MouseDown" Cursor="Hand" />
                    </DockPanel>
                    <DockPanel Margin="0 8 0 0">
                        <Button x:Name="btnUsuarios" Content="Usuarios" Style="{StaticResource MenuButtonStyle}" Click="btnUsuarios_Click"/>
                        <Button x:Name="btnHabitaciones" Content="Habitaciones" Style="{StaticResource MenuButtonStyle}" Click="btnHabitaciones_Click"/>
                        <Button x:Name="btnReservas" Content="Reservas" Style="{StaticResource MenuButtonStyle}"/>
                    </DockPanel>
                    <StackPanel VerticalAlignment="Center" Margin="40,0">
                        <!--<Label Content="User Name" Foreground="#8C52FF" FontSize="21" MouseDown="Label_MouseDown" />-->
                        <Menu FontSize="20" Background="Transparent" Foreground="#8C52FF">
                            <MenuItem>
                                <MenuItem.Header>
                                    <StackPanel  Orientation="Horizontal">
                                        <StackPanel Orientation="Vertical" >
                                            <TextBlock Name="txtUsuarioSession" HorizontalAlignment="Center"  Text="Username" Margin="0,0,5,0" Cursor="Hand"/>
                                            <TextBlock Name="txtUsuarioRol" HorizontalAlignment="Center" FontSize="10" Text="Administrador" Cursor="Hand" Margin="0,0,5,0" />
                                        </StackPanel>
                                        <TextBlock Text="▼" FontSize="12" Foreground="#CD6CE0" Margin="10,14,0,0" Cursor="Hand"/>
                                    </StackPanel>
                                </MenuItem.Header>
                                <StackPanel>
                                    <MenuItem Name="MenuCambiarContraseña" FontSize="15" Foreground="#FFFFFF" Header="Cambiar Contraseña" Click="MenuCambiarContraseña_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="🗝️" FontSize="12" Foreground="#FFFFFF"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem FontSize="15" x:Name="MenuCerrarSesion" Foreground="#FFFFFF" Header="Cerrar Sesión  " Click="MenuCerrarSesion_Click" >
                                        <MenuItem.Icon>
                                            <TextBlock Text="⏏️" FontSize="10" Foreground="#FFFFFF"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem FontSize="15" x:Name="MenuApagar" Foreground="#FFFFFF" Header="Apagar" Click="MenuApagar_Click"  >
                                        <MenuItem.Icon>
                                            <TextBlock Text="⚡" FontSize="13" Foreground="#FFFFFF"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </StackPanel>
                            </MenuItem>
                        </Menu>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Width="750" Height="500" CornerRadius="10" BorderBrush="Gray" BorderThickness="4 2 4 6" Background="#C8C8C8">
                    <StackPanel>
                        <Canvas Height="63" VerticalAlignment="Top">
                            <Label  Content="Reservas" Canvas.Left="20" FontSize="45" FontWeight="Bold" Foreground="#FF06080D"></Label>
                            <StackPanel Canvas.Right="20" Canvas.Top="20" Orientation="Horizontal" VerticalAlignment="Center">
                                <Image x:Name="imgToggleButton" Source="/View/Reservas/imgDataGrid.png" Width="20" Margin="10,0"/>
                            </StackPanel>
                        </Canvas>

                        <DataGrid x:Name="DataGridReservas" HeadersVisibility="None" CanUserAddRows="False" Margin="0,20,0,0" Width="700" Height="350" VerticalAlignment="Top" HorizontalAlignment="Center" AutoGenerateColumns="False" GridLinesVisibility="None" Background="White" BorderBrush="Black" BorderThickness="2 3 2 3" ItemsSource="{Binding AllReservas}">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <!-- Fondo predeterminado -->

                                    <Setter Property="Background" Value="#FFF1F1F1" />
                                    <Setter Property="Margin" Value="10,8" />
                                    <Setter Property="Height" Value="70" />
                                    <Setter Property="FontWeight" Value="Medium" />
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="BorderThickness" Value="2"/>



                                    <!-- Cambiar fondo al pasar el mouse -->
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding _id}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding _id}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFFDD7FF" />

                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#FFFDD7FF"/>
                                            <Setter Property="BorderBrush" Value="#CD6CE0" />
                                            <Setter Property="BorderThickness" Value="1" />
                                        </Trigger>
                                        <!-- Alternar colores de fila -->
                                        <Trigger Property="AlternationIndex" Value="1">
                                            <Setter Property="Background" Value="White" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn Header="A nombre de:" Width="100" Binding="{Binding id_usu}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="BorderBrush" Value="Black"/>
                                            <Setter Property="BorderThickness" Value="0 0 0 3"/>
                                            <Setter Property="FontSize" Value="20"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Habitación Reservada:" Width="100" Binding="{Binding id_hab}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha de Entrada:" Width="100" Binding="{Binding fecha_check_in}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Fecha de Salida:" Width="100" Binding="{Binding fecha_check_out}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Estado de la Reserva:" Width="100" Binding="{Binding estado_reserva}" >
                                    <DataGridTextColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF" />

                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Setter Property="BorderThickness" Value="1" />
                                                    <Setter Property="Foreground" Value="Black" />
                                                </Trigger>

                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.CellStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Acción" Width="150" >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Orientation="Vertical">
                                                    <Button x:Name="btnModificar" Content="Editar" Width="80" Height="25" Margin="0,3" Background="#CD6CE0" BorderBrush="#8C52FF" BorderThickness="1 0 1 3" Foreground="White" Cursor="Hand" Click="btnEditar_Click">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="10"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                    <Button x:Name="btnEliminar" Content="Eliminar" Width="80" Height="25" Margin="0,3" Background="#8C52FF" BorderBrush="#CD6CE0" BorderThickness="1 0 1 3" Cursor="Hand" Foreground="White" Click="btnBorrar_Click"  >
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="10"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </StackPanel>
                                                <StackPanel>
                                                    <Button x:Name="btnInformacion" Content="Info" Width="50" Height="50" Margin="3,6" Background="#C8C8C8" BorderBrush="Black" BorderThickness="1 0 1 3" Cursor="Hand" Foreground="Black" Click="btnInfo_Click"  >
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="15"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#FFFDD7FF"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom">
                    <Button x:Name="btnBuscarReserva" Width="80" Height="80" Background="Transparent" BorderBrush="Transparent" Margin="8" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btnBuscadorReserva_Click">
                        <Image Source="/View/Reservas/search.png" />
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>