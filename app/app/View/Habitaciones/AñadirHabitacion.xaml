<Window x:Class="app.View.Habitaciones.AñadirHabitacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app.View.Habitaciones"
        mc:Ignorable="d"
                Title="AddHabitacion" Height="647" Width="800" FontFamily="Montserrat"
        WindowStartupLocation="CenterScreen" WindowStyle="none" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="20" Background="White" BorderThickness="5">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="Blue" Offset="1"></GradientStop>
                <GradientStop Color="#FFFFFF" Offset="0.75"></GradientStop>
                <GradientStop Color="Blue" Offset="0.0"></GradientStop>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid Margin="0,0,0,3">

            <DockPanel Height="100" VerticalAlignment="Top">
                <Label Content="Añadir habitación" FontSize="40" Foreground="Blue" FontWeight="Bold" Margin="20,10" Height="55"/>
                <Button Background="Black" Height="50" Width="50" 
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20,10" Click="btnCerrar_Click">
                    <Label Content="X" Foreground="White" FontSize="32" FontWeight="DemiBold"/>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="40"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </DockPanel>

            <Grid Margin="0,100,0,31">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1.75*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1.75*"/>
                </Grid.RowDefinitions>

                <Label Content="Numero de la planta" FontSize="14" Margin="15,0" />
                <TextBox x:Name="txtNumPlanta" Margin="20" Height="25" FontSize="16">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Label Grid.Column="1" Content="Nombre de habitación" FontSize="14" Margin="15,0" />
                <TextBox x:Name="txtNom" Grid.Column="1" Margin="20" Height="25" FontSize="16">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Label Grid.Column="2" Content="Tipo habitacion" FontSize="14" Margin="15,0"/>
                <TextBox x:Name="txtTipo" Grid.Column="2"  Margin="20" Height="25">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Label Grid.Row="2" Content="Capacidad" FontSize="14" Margin="15,0"/>
                <ComboBox x:Name="txtCapacidad"  Grid.Row="2"  Margin="20" Height="25">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBox">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="White"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <ToggleButton x:Name="ToggleButton" 
                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                    Content="{TemplateBinding SelectionBoxItem}" 
                                    Focusable="False" 
                                    IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                    ClickMode="Press" />
                                            <Popup x:Name="DropDown" 
                                    IsOpen="{TemplateBinding IsDropDownOpen}" 
                                    Placement="Bottom" 
                                    AllowsTransparency="True" 
                                    Focusable="False">
                                                <Border Background="White" BorderBrush="Gray" BorderThickness="1">
                                                    <ScrollViewer>
                                                        <ItemsPresenter />
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBoxItem>1</ComboBoxItem>
                    <ComboBoxItem>2</ComboBoxItem>
                    <ComboBoxItem>3</ComboBoxItem>
                    <ComboBoxItem>4</ComboBoxItem>
                    <ComboBoxItem>5</ComboBoxItem>
                    <ComboBoxItem>8</ComboBoxItem>
                </ComboBox>

                <Label Grid.Row="1" Content="Descripcion" FontSize="14" Margin="15,0"/>
                <TextBox x:Name="txtDescripcion" Grid.Row="1"  Margin="18,28,18,10" FontSize="16" TextWrapping="Wrap" Grid.ColumnSpan="3">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Label Grid.Row="3" Content="Opciones" FontSize="14" Margin="15,0"/>
                <CheckBox x:Name="Opcion" Margin="18,58,155,21" Grid.Row="3" Content="Cama extra"></CheckBox>
                <CheckBox x:Name="Opcion1" Margin="133,59,71,33" Grid.Row="3" Content="Cuna"/>

                <Label Grid.Row="2" Grid.Column="1" Content="Precio final" FontSize="14" Margin="15,0"/>
                <TextBox x:Name="txtPrecio" Grid.Row="2" Grid.Column="1" Margin="20" FontSize="16" Height="25">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Label Grid.Row="2" Grid.Column="2" Content="Precio Original" FontSize="14" Margin="15,0"/>
                <TextBox x:Name="txtPrecioOriginal" Grid.Row="2" Grid.Column="2" Margin="20" FontSize="16" Height="25">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Label Grid.Row="3" Grid.Column="1" Content="Estado" FontSize="14" Margin="15,0"/>
                <TextBox x:Name="txtEstado" Grid.Row="3" Grid.Column="1" Margin="20" FontSize="16" Height="25">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <Label Grid.Row="3" Grid.Column="2" Content="Seleccionar Imagen" FontSize="14" Margin="15,0"/>
                <TextBox Grid.Row="3" Grid.Column="2" x:Name="FilePathTextBox" Height="30"
                     IsReadOnly="True" VerticalContentAlignment="Center"
                     Padding="5" BorderBrush="Gray" BorderThickness="1" Margin="20,38,20,38">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Button Grid.Row="3" Grid.Column="2" Content="Seleccionar archivo"
                    Margin="78,38,78,38" Click="BrowseButton_Click"/>

                <Button x:Name="btnEnviar" Grid.Column="1" Grid.Row="4" Content="Crear habitacion" Margin="46,22,46,21" Background="LightBlue" 
                BorderBrush="LightBlue" FontSize="14" Click="btnAgregarHabitacion_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>

        </Grid>

    </Border>

</Window>